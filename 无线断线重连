#导入所需模块
#导入进程模块
import subprocess
import urllib2
import urllib
#socket针对进程见通信
import socket
import types
import time
import os
import re

#定义模拟登陆
class Login:
    #初始化变量
    def __init__(self):
        #定义用户名
        self.username = "xxxx"
        #密码
        self.password = "xxxx"
        #无线网络IP网段
        self.ip_pre = '211.87'
        #登陆时长
        self.overtime = 720
        #检测间隔时间，单位s
        self.every = 10
    
    #模拟登陆
    def login(self):
        print (self.getCurrenttime(), u"正在尝试认证QLSC_SLC无线网络")
        #获取包含无线IP地址
        ip = self.getIP()
        #设置网页表单数据
        data = {
            "username": self.username,
            "password": self.password,
            "serverType": "",
            "isSavePass": "on",
            "Submit1": "",
            "Language": "Chinese",
            "ClientIP": self.getIP(),
            "timeoutvalue": 45,
            "heartbeat": 240,
            "fastwebornot": False,
